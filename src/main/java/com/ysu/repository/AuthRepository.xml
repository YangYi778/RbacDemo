<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ysu.repository.AuthRepository">
	<insert id="insertAuth">
		INSERT INTO tb_auth (name, authUrl, authParentRoot, authIsRoot, icon) VALUES (#{name},#{authUrl},#{authParentRoot},#{authIsRoot},#{icon})
	</insert>
	<update id="updateAuth">
		UPDATE tb_auth SET name=#{name},authUrl=#{authUrl},authParentRoot=#{authParentRoot},authIsRoot=#{authIsRoot}
		WHERE   id = #{id}
	</update>

    <delete id="deleteAuth">
		DELETE FROM tb_auth WHERE id = #{id}
	</delete>

	<select id="queryChildAuths" parameterType="int" resultType="Auth">
		select * from tb_auth where authParentRoot = #{authParentRoot}
	</select>

	<select id="queryAllAuths" resultType="Auth">
		select * from tb_auth
	</select>

	<select id="queryAuthByUser" resultType="Auth" parameterType="User">
		select * from tb_auth where id in(select authId from tb_role_auth where roleId in(select roleId from tb_user_role where userId=#{userId}))
	</select>

	<select id="queryAuthByName" resultType="com.ysu.entity.Auth">
		SELECT * FROM tb_auth WHERE name=#{name}
	</select>

	<update id="updateAuthName" >
		UPDATE  tb_auth SET name=#{name} WHERE id=#{id}
	</update>

</mapper>